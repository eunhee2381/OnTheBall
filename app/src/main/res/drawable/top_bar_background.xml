<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D9D9D9" /> <!-- 배경색 설정 -->
        </shape>
    </item>

    <!-- Border Layer (하단에만 적용) -->
    <item android:top="-2dp" android:right="-2dp" android:left="-2dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="#000000"
            android:width="2dp" />
        </shape>
    </item>
</layer-list>
