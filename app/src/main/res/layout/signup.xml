<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/appbar"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:background="#2D9596"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="계정 생성"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/option_user"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <EditText
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="-6dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="  이름"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/option_user"
        app:layout_constraintStart_toStartOf="@+id/option_user"
        app:layout_constraintTop_toBottomOf="@id/option_user" />

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="-6dp"
        android:background="@drawable/edit_text_background"
        android:hint="  이메일"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="-6dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="  비밀번호"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/email"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@id/email" />

    <EditText
        android:id="@+id/birthDay"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="-6dp"
        android:background="@drawable/edit_text_background"
        android:hint="  생년월일 8자리"
        android:inputType="number"
        android:maxLength="8"
        app:layout_constraintEnd_toEndOf="@+id/password"
        app:layout_constraintStart_toStartOf="@+id/password"
        app:layout_constraintTop_toBottomOf="@id/password" />

    <EditText
        android:id="@+id/studentID"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="-6dp"
        android:background="@drawable/edit_text_background"
        android:hint="  학번"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/birthDay"
        app:layout_constraintStart_toStartOf="@+id/birthDay"
        app:layout_constraintTop_toBottomOf="@id/birthDay" />

    <Button
        android:id="@+id/signup"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/signinbutton"
        android:text="회원가입"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studentID"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
